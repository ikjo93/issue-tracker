{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "Node",
    "declaration": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@constants/*": ["src/constants/*"],
      "@style/*": ["src/style/*"],
      "@pages/*": ["src/pages/*"],
      "@contexts/*": ["src/contexts/*"]
    }
  },
  "include": ["src", "config"]
}
